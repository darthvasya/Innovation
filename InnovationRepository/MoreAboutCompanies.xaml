<Window x:Class="InnovationRepository.MoreAboutCompanies"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InnovationRepository"
        mc:Ignorable="d"
        Title="MoreAboutCompanies" Height="680" Width="1224" WindowStartupLocation="CenterScreen">
    <Grid>

        <ListBox x:Name="myList" SelectionChanged="myList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <Image Width="100" Height="75" Source="Resources/no2.png" />
                        <TextBlock FontSize="16" Text="{Binding Path=Title}" HorizontalAlignment="Center" />
                        <TextBlock FontSize="16" Text="{Binding Path=Company}" HorizontalAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--<ListBox x:Name="phonesList">
            <ListBox.Items>
                <Image x:Name="image" HorizontalAlignment="Left" Height="178" Margin="0,0,0,0" VerticalAlignment="Top" Width="163" Source="Resources/no2.png"/>
            </ListBox.Items>
        </ListBox>-->



    </Grid>
</Window>
